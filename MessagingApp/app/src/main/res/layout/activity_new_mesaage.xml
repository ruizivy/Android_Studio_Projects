<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruiz.messagingapp.NewMesaageActivity">


    <LinearLayout
        android:id="@+id/pnlheader1"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFF"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lblContacts"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20px"
            android:hint="To:"/>

        <Button
            android:id="@+id/btncontacts"
            android:layout_width="70px"
            android:height="70px"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="70px"
            android:layout_marginRight="80px"
            android:background="@mipmap/contacts"
            />

    </LinearLayout>
    <ListView
        android:layout_below="@+id/pnlheader1"
        android:id="@+id/lstnemessage"
        android:layout_width="fill_parent"
        android:layout_height="950px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/txt_newmessage"
            android:layout_width="620px"
            android:layout_height="wrap_content"
            android:textSize="25px"
            android:background="@android:drawable/alert_light_frame"
            android:lines="2"
            android:layout_marginLeft="10px"
            android:ellipsize="end"
            android:hint="Write Message"
            android:textStyle="italic"
            />
        <Button
            android:layout_marginLeft="10px"
            android:id="@+id/btnnewsend"
            android:layout_width="70px"
            android:layout_height="50px"
            android:background="@mipmap/send"
            />
    </LinearLayout>
</RelativeLayout>
