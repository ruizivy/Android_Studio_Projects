<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruiz.assignmentmessaging.NewMessageActivity">
    <LinearLayout
        android:id="@+id/pnlheader1"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFF"
        android:orientation="horizontal">
    <Button
     android:id="@+id/btnback"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@mipmap/gray"
        android:layout_weight="10"
        android:layout_marginLeft="10px"
        android:layout_marginTop="15px"
    android:ellipsize="end"
    />

        <EditText
            android:id="@+id/lblContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:hint="To:"
            android:textSize="35px"
            android:layout_weight="80"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btncontacts"
            android:layout_width="120px"
            android:height="120px"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:background="@mipmap/contacts"
            />

    </LinearLayout>
    <ListView
        android:layout_below="@+id/pnlheader1"
        android:id="@+id/lstnemessage"
        android:layout_width="fill_parent"
        android:stackFromBottom="true"
        android:layout_height="950px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/txt_newmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25px"
            android:background="@android:drawable/alert_light_frame"
            android:layout_marginLeft="5px"
            android:ellipsize="end"
            android:layout_weight="90"
            android:lines="2"
            android:hint="Write Message"
            android:textStyle="italic"
            />
        <Button
            android:id="@+id/btnnewsend"
            android:layout_width="90px"
            android:layout_weight="10"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:layout_marginTop="5px"
            android:background="@mipmap/send"
            android:layout_marginBottom="5px"
            android:layout_marginRight="10px"
            />
    </LinearLayout>

</RelativeLayout>
