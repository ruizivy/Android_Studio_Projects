<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ruiz.assignment_2.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza Ordering"
                android:textSize="30dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:fontFamily="cursive"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/lstSpin"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_below="@+id/txtheader"
                    >
                </Spinner>

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:hint="Enter your fullname"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Pizza Flavor"
                android:textSize="20dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:fontFamily="cursive"
                android:layout_marginTop="10sp"
                />
            <RadioGroup
                android:id="@+id/rgPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbHawai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rgPizza"
                    android:text="Hawaiian"
                    />
                <RadioButton
                    android:id="@+id/rbPepp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rgHawai"
                    android:text="Pepperoni"
                    />
                <RadioButton
                    android:id="@+id/rbHam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rgPepp"
                    android:text="Ham and Cheese"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Pizza Size"
                android:textSize="20dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:fontFamily="cursive"
                android:layout_marginTop="10sp"
                />
            <RadioGroup
                android:id="@+id/rgSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rgSolo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rgSize"
                    android:text="Solo"
                    />
                <RadioButton
                    android:id="@+id/rgMeduim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rgSolo"
                    android:text="Meduim"
                    />
                <RadioButton
                    android:id="@+id/rgLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rgMeduim"
                    android:text="Large"
                    />
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aditionals"
                android:textSize="20dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:fontFamily="cursive"
                android:layout_marginTop="10sp"
                />
            <CheckBox
                android:id="@+id/chkCheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheese"
                android:onClick="SelectItem"

                />
            <CheckBox
                android:id="@+id/chkMushroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mushroom"
                android:layout_below="@id/chkCheese"
                android:onClick="SelectItem"
                />
            <CheckBox
                android:id="@+id/chkGarlic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garlic"
                android:layout_below="@+id/chkMushroom"
                android:onClick="SelectItem"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Request"
                android:textSize="20dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:fontFamily="cursive"
                android:layout_marginTop="10sp"
                />
            <EditText
                android:id="@+id/txtAdd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Enter your additonal request here..."
                android:background="@android:drawable/alert_light_frame"
                />
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="right"
                android:layout_below="@+id/txtText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
