<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruiz.assignment_2.Second_Activity">

    <TextView
        android:id="@+id/txtheader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza Ordering"
        android:textSize="30dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:fontFamily="cursive"
        />
    <TextView
        android:id="@+id/txtViewOrder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:gravity="center"
        android:lines="8"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/txtheader1"
        android:background="@android:drawable/alert_light_frame"
        />
    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Order"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="right"
        android:layout_below="@+id/txtViewOrder"
        android:layout_alignEnd="@+id/txtViewOrder"
        android:layout_marginEnd="13dp"
        android:textStyle="bold"
        />


</RelativeLayout>
