<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dheoclaveria.messenger.Main_Form">


    <LinearLayout
        android:id="@+id/pnltop"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="#2dbb9d"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/lblstatustop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="90"
            android:fontFamily="sans-serif"
            android:gravity="center|left"
            android:text="Messages "
            android:textColor="#f0fff0"
            android:textSize="35px"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lstcustomview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pnltop"></ListView>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40px"
        android:layout_marginEnd="30px"
        android:background="@drawable/add"
        android:textAlignment="center"
        android:textColor="#fff" />


</RelativeLayout>
