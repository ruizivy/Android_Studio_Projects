<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruiz.customlistview.SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter ID"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/lblID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/lbl1"
            android:layout_marginLeft="20sp"
            android:background="@android:drawable/alert_light_frame"

            />
        <TextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Fullname"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:layout_below="@+id/lblID"
            />
        <EditText
            android:id="@+id/lblfullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl2"
            android:layout_marginLeft="20sp"
            android:background="@android:drawable/alert_light_frame"

            />
        <TextView
            android:id="@+id/lbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Address"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:layout_below="@+id/lblfullname"
            />
        <EditText
            android:id="@+id/lbladdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:background="@android:drawable/alert_light_frame"
            android:layout_below="@+id/lbl3"
            />
        <TextView
            android:id="@+id/lbl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Position"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:layout_below="@+id/lbladdress"
            />
        <EditText
            android:id="@+id/lblposition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:background="@android:drawable/alert_light_frame"
            android:layout_below="@+id/lbl4"
            />
        <TextView
            android:id="@+id/lbl5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Mobile"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:layout_below="@+id/lblposition"
            />
        <EditText
            android:id="@+id/lblmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:background="@android:drawable/alert_light_frame"
            android:layout_below="@+id/lbl5"
            android:layout_marginLeft="20sp"
            />
        <TextView
            android:id="@+id/lbl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Email"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:layout_below="@+id/lblmobile"
            />
        <EditText
            android:id="@+id/lblemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:layout_below="@id/lbl6"
            android:layout_marginLeft="20sp"
            />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@mipmap/save"
            android:layout_gravity="right"
            android:layout_marginRight="10sp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/lblemail"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</ScrollView>
